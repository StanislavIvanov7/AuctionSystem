@model ChangeUserRoleViewModel

<h2>Change User Role</h2>

<form asp-action="ChangeUserRole" method="post">
    <input type="hidden" asp-for="UserId" />
    <div>
        <label>Current Role: @Model.UserRole</label>
    </div>
    <div>
        <label>New Role</label>
        <select asp-for="SelectedRole" class="form-control" asp-items="@(new SelectList(Model.UserRoles, "Name", "Name"))" required data-val="true" data-val-required="Please select a role">
            <option value="">--Select Role--</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>