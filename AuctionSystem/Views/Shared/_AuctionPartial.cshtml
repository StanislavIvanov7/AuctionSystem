@model AllAuctionViewModel
@* @{
    var auctions = Model.ToList();
} *@


<div class="col-md-3">
    <div class="card mb-4">
        <div class="mb-5"></div>
        <div class="mb-5"></div>
        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
               
                    @foreach (var item in Model.ImageUrl)
                    {
                        var diet = item;
                        <div class="carousel-item">
                            <img class="d-block w-100" style="height:150px" src="@diet.ImageUrl">
                        </div>
                    }
                   @*  var diet = auctions[i];
                    <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                        <img class="d-block w-100" style="height:150px" src="@diet.ImageUrl">
                    </div> *@
                
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div> 
       <img class="card-img-top" src="@Model.ImageUrl" alt="Product Image">

       
            <div class="card-body text-center">

                <h5 class="card-title mt-1">@Model.Name</h5>
                <p class="mb-0">Price: @Model.LastPrice lv.</p>
                <p class="mb-0">Description: @Model.Description</p>
                <p class="mb-0">Min bidding step: @Model.MinBiddingStep</p>
                <p class="mb-0">Bidding period in days: @Model.BiddingPeriodInDays</p>


                <a asp-controller="Auction" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Details</a>

                <form class="input-group-sm" asp-controller="Product" asp-action="AddToCart" asp-route-id="@Model.Id">
                  <input type="submit" value="Add Product to cart" class="fs-6 btn btn-success mb-3 p-2" />
                </form>

            </div>
        
        
    </div>
</div>

