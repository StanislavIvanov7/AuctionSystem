@model IEnumerable<AllCommentAboutUserFromOtherUsers>
@{
    ViewBag.Title = "All Comments About User From Other Users";
}
<style>
    .card-body {
        font-size: 1.1em;
        font-weight: bold;
    }
</style>

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row flex gap-4 m-4 justify-content-center">
    @foreach (var c in Model)
    {
        <div class="card col-4" style="width: 20rem; ">

            <div class="card-body">

                <p class="card-title mt-1">Comment: @c.Content</p>
                <p class="mb-0">Sending Comment User: @c.SendingCommentUserName</p>

            </div>


        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}