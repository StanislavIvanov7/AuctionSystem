@model ModeratorAuctionFormViewModel
@{
    ViewBag.Title = "Edit Auction";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="EditCondition" method="post">
            <div class="mb-3">
                <label asp-for="@Model.ConditionId" class="form-label-add-edit">Edit Auction Condition</label>
                <select asp-for="@Model.ConditionId" class="form-control" aria-required="true">
                    @foreach (var condition in Model.Conditions)
                    {
                        <option value="@condition.Id">@condition.Name</option>
                    }
                </select>
                <span asp-validation-for="@Model.ConditionId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Edit" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}