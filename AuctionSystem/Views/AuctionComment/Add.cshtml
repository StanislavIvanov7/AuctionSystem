@model AuctionCommentFormViewModel
@{
    ViewBag.Title = "Add Auction Comment";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Add" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Content" class="form-label-add-edit">Auction Comment</label>
                <input asp-for="@Model.Content" class="form-control" aria-required="true" placeholder="Write auction comment here..." />
                <span asp-validation-for="@Model.Content" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.AuctionId" class="form-label-add-edit">Name Of Auction</label>
                <select asp-for="@Model.AuctionId" class="form-control" aria-required="true">
                    <option disabled selected value="">Select Auction...</option>
                    @foreach (var auction in Model.Auctions)
                    {
                        <option value="@auction.Id">@auction.Name</option>
                    }
                </select>
                <span asp-validation-for="@Model.AuctionId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Create" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
